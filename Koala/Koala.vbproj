<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>Koala</RootNamespace>
    <AssemblyName>Koala</AssemblyName>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    
    <!-- Only enable Windows Forms on Windows -->
    <UseWindowsForms Condition="'$(OS)' == 'Windows_NT'">true</UseWindowsForms>
    
    <!-- Disable auto-generated assembly attributes to avoid conflicts -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    
    <!-- VB.NET specific settings -->
    <OptionExplicit>On</OptionExplicit>
    <OptionCompare>Binary</OptionCompare>
    <OptionStrict>Off</OptionStrict>
    <OptionInfer>On</OptionInfer>
    <MyType>Empty</MyType>
    
    <!-- Suppress VB.NET warnings -->
    <NoWarn>42016,41999,42017,42018,42019,42032,42036,42020,42021,42022</NoWarn>
    
    <!-- Remove hard-coded paths - use relative output path -->
    <OutputPath Condition="'$(OutputPath)' == ''">bin\$(Configuration)\</OutputPath>
    
    <!-- For Grasshopper deployment, copy to Libraries folder if it exists -->
    <GrasshopperLibraries Condition="'$(OS)' == 'Windows_NT'">$(USERPROFILE)\AppData\Roaming\Grasshopper\Libraries</GrasshopperLibraries>
    <GrasshopperLibraries Condition="'$(OS)' != 'Windows_NT'">$(OutputPath)</GrasshopperLibraries>
  </PropertyGroup>

  <!-- Custom configurations -->
  <PropertyGroup Condition="'$(Configuration)' == 'Debug64'">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <DefineDebug>true</DefineDebug>
    <DefineTrace>true</DefineTrace>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release64'">
    <DebugType>pdbonly</DebugType>
    <DefineDebug>false</DefineDebug>
    <DefineTrace>true</DefineTrace>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Grasshopper" Version="9.0.25051.305-wip" />
    <PackageReference Include="Rhino.Inside" Version="9.0.5-beta" />
    <PackageReference Include="RhinoCommon" Version="9.0.25051.305-wip" />
    <PackageReference Include="System.Resources.Extensions" Version="8.0.0" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="8.0.0" />
    <PackageReference Include="Microsoft.VisualBasic" Version="10.3.0" />
  </ItemGroup>

  <!-- Exclude problematic My Project files that don't work well with .NET 8 -->
  <ItemGroup>
    <Compile Remove="My Project\Application.Designer.vb" />
    <Compile Remove="My Project\Settings.Designer.vb" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\**\*.bmp" />
    <EmbeddedResource Include="Resources\koala.xml.def" />
  </ItemGroup>

  <!-- Post-build event to create .gha file -->
  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="Exists('$(GrasshopperLibraries)')">
    <Copy SourceFiles="$(TargetPath)" DestinationFiles="$(GrasshopperLibraries)\$(AssemblyName).gha" />
    <Copy SourceFiles="$(TargetPath)" DestinationFiles="$(TargetDir)$(AssemblyName).gha" />
  </Target>
  
  <!-- Fallback post-build if Grasshopper Libraries doesn't exist -->
  <Target Name="PostBuildFallback" AfterTargets="PostBuildEvent" Condition="!Exists('$(GrasshopperLibraries)')">
    <Copy SourceFiles="$(TargetPath)" DestinationFiles="$(TargetDir)$(AssemblyName).gha" />
  </Target>

</Project>