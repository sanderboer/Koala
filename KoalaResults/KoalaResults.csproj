  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Debug|AnyCPU'">
    <StartProgram Condition="'$(OS)' == 'Windows_NT' AND '$(TargetFramework)' == 'net48'">C:\Program Files\Rhino 6\System\Rhino.exe</StartProgram>
