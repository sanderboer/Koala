  <ItemGroup>
    <PackageReference Include="Grasshopper" Version="8.23.25251.13001" />
    <PackageReference Include="RhinoCommon" Version="8.23.25251.13001" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.10" />
